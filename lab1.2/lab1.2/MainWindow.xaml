        <Button Content="Изменить" HorizontalAlignment="Left" Margin="274,334,0,0" VerticalAlignment="Top" Click="Button_Click_2"/>
        <Button Content="Удалить" HorizontalAlignment="Left" Margin="358,334,0,0" VerticalAlignment="Top" Click="Button_Click_3"/>
        <TextBox x:Name="NameTbx_2" HorizontalAlignment="Left" Margin="31,358,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="NameTbx_3" HorizontalAlignment="Left" Margin="31,381,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="NameTbx" HorizontalAlignment="Left" Margin="31,312,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>