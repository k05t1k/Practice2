        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,0,-6">
        <DataGrid x:Name="PizzaDataGrid" Margin="0,0,0,147" RenderTransformOrigin="0.5,0.5">
